<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeActivity">
    <activity
        android:id="@+id/signInActivity"
        android:name="kr.hs.dgsw.mentomenv2.feature.signin.SignInActivity"
        android:label="activity_sign_in"
        tools:layout="@layout/activity_sign_in" />
    <activity
        android:id="@+id/homeActivity"
        android:name="kr.hs.dgsw.mentomenv2.feature.main.HomeActivity"
        android:label="HomeActivity" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="kr.hs.dgsw.mentomenv2.feature.main.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment2_to_postFragment"
            app:destination="@id/postFragment" />
        <action
            android:id="@+id/action_homeFragment2_to_myFragment"
            app:destination="@id/myFragment" />
    </fragment>
    <fragment
        android:id="@+id/postFragment"
        android:name="kr.hs.dgsw.mentomenv2.feature.post.PostFragment"
        android:label="PostFragment" >
        <action
            android:id="@+id/action_postFragment_to_homeFragment2"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_postFragment_to_myFragment"
            app:destination="@id/myFragment" />
    </fragment>
    <fragment
        android:id="@+id/myFragment"
        android:name="kr.hs.dgsw.mentomenv2.feature.my.MyFragment"
        android:label="fragment_my"
        tools:layout="@layout/fragment_my" >
        <action
            android:id="@+id/action_myFragment_to_homeFragment2"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>